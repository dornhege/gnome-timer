Summary:   A time management utility for GNOME
Name:      @PACKAGE_NAME@
Version:   @PACKAGE_VERSION@
Release:   1%{?dist}
License:   GPLv3+
URL:       @PACKAGE_URL@
Source:    @PACKAGE_NAME@-@PACKAGE_VERSION@.tar.xz

%if %{undefined fedora}
Group: Productivity/Office/Other
%endif

BuildRequires: gettext
BuildRequires: vala >= @VALA_REQUIRED@
BuildRequires: desktop-file-utils
BuildRequires: pkgconfig(glib-2.0) >= @GLIB_REQUIRED@
BuildRequires: pkgconfig(gio-2.0) >= @GLIB_REQUIRED@
BuildRequires: pkgconfig(gtk+-3.0) >= @GTK_REQUIRED@
BuildRequires: pkgconfig(gsettings-desktop-schemas) >= @GNOME_REQUIRED@
BuildRequires: pkgconfig(gobject-introspection-1.0) >= @INTROSPECTION_REQUIRED@
BuildRequires: pkgconfig(libpeas-1.0) >= @LIBPEAS_REQUIRED@
BuildRequires: pkgconfig(gom-1.0) >= @GOM_REQUIRED@
BuildRequires: pkgconfig(gstreamer-1.0) >= 1.0.10
BuildRequires: pkgconfig(libcanberra) >= 0.30
BuildRequires: pkgconfig(appstream-glib)

%if %{defined fedora}
BuildRequires: vala-tools
%endif

%if %{undefined fedora}
BuildRequires: gnome-shell >= @GNOME_REQUIRED@
%endif

Requires: gtk3 >= @GTK_REQUIRED@
Requires: hicolor-icon-theme

%if %{defined fedora}
Requires: gstreamer1
%else
Requires: gstreamer
%endif

%if %{defined fedora}
Recommends: gstreamer1-plugins-base
%else
Recommends: gstreamer-plugins-base
%endif

%if %{defined fedora}
Obsoletes: gnome-shell-extension-extimer
%endif

%description
A GNOME utility that helps managing time according to ExTimer Technique. It
intends to improve productivity and focus by taking short breaks after every
25 minutes of work.

%prep
%setup -q -n @PACKAGE_TARNAME@-%{version}

%build
LDFLAGS="-Wl,--as-needed" %configure --disable-static
make %{?_smp_mflags}

%install
make install DESTDIR=$RPM_BUILD_ROOT INSTALL="install -p"
find $RPM_BUILD_ROOT -name '*.la' -exec rm -f {} ';'
desktop-file-edit $RPM_BUILD_ROOT/%{_datadir}/applications/*.desktop \
    --set-key=X-AppInstall-Package --set-value=%{name}

%find_lang %{name}

%check
desktop-file-validate $RPM_BUILD_ROOT/%{_datadir}/applications/org.gnome.ExTimer.desktop

%post
touch --no-create %{_datadir}/icons/hicolor &>/dev/null || :

%postun
if [ $1 -eq 0 ]; then
    touch --no-create %{_datadir}/icons/hicolor &> /dev/null || :
    gtk-update-icon-cache %{_datadir}/icons/hicolor &> /dev/null || :
    glib-compile-schemas %{_datadir}/glib-2.0/schemas &> /dev/null || :
fi

%posttrans
gtk-update-icon-cache %{_datadir}/icons/hicolor &> /dev/null || :
glib-compile-schemas %{_datadir}/glib-2.0/schemas &> /dev/null || :

%files -f %{name}.lang
%doc README.md COPYING NEWS
%{_bindir}/gnome-extimer
%{_libdir}/gnome-extimer
%{_libdir}/libgnome-extimer.so*
%{_datadir}/metainfo/org.gnome.ExTimer.appdata.xml
%{_datadir}/applications/org.gnome.ExTimer.desktop
%{_datadir}/dbus-1/services/org.gnome.ExTimer.service
%{_datadir}/glib-2.0/schemas/org.gnome.extimer.*
%{_datadir}/gnome-extimer
%{_datadir}/gnome-shell/extensions/@EXTENSION_UUID@
%{_datadir}/icons/hicolor/*/apps/*
