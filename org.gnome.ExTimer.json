{
    "app-id": "org.gnome.ExTimer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-extimer",
    "copy-icon": true,
    "rename-icon": "gnome-extimer",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.gnome.Shell",
        "--device=dri",
        "--socket=pulseaudio",
        "--socket=session-bus",
        "--filesystem=host",
        "--filesystem=/usr/share/glib-2.0/schemas:ro",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:rw",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
        }
    },
    "cleanup": [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/pkgconfig",
        "/share/man",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "config-opts": [
                "-Dlua51=false",
                "-Dpython3=false",
                "-Ddemos=false"
            ],
            "cleanup": [
                "/bin/*",
                "/lib/peas-demo",
                "/include",
                "/lib/girepository-1.0",
                "/lib/*.la",
                "/lib/pkgconfig",
                "/share/gir-1.0",
                "/share/gtk-doc"
            ],
            "sources": [
                {
                    "type": "git",
                    "branch": "master",
                    "url": "https://gitlab.gnome.org/GNOME/libpeas.git"
                }
            ]
        },
        {
            "name": "gom",
            "buildsystem": "meson",
            "config-opts": [
                "--prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "branch": "master",
                    "url": "https://gitlab.gnome.org/GNOME/gom.git"
                }
            ]
        },
        {
            "name": "gnome-extimer",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "file",
                    "path": "."
                },
                {
                    "type": "git",
                    "branch": "master",
                    "url": "https://github.com/codito/gnome-extimer.git"
                }
            ]
        }
    ]
}
